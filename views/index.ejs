<%- include('partials/header.ejs') %>

<div class="row">
    <div class="col-md-8 offset-md-2 text-center">
        <h1 class="display-4 mb-4">Issue Hierarchy Construction</h1>
        <p class="lead mb-5">
            Organize your GitHub repository issues into meaningful hierarchies with AI-powered clustering.
            Create epic issues automatically and visualize relationships between them.
        </p>
        
        <% if (locals.user) { %>
            <div class="mb-5">
                <a href="/dashboard" class="btn btn-primary btn-lg">
                    <i class="fas fa-th-list me-2"></i> Go to Your Repositories
                </a>
            </div>
        <% } else { %>
            <div class="mb-5">
                <a href="/login" class="btn btn-dark btn-lg">
                    <i class="fab fa-github me-2"></i> Sign in with GitHub
                </a>
                <p class="mt-3 text-muted small">
                    We'll only request the permissions needed to access your repositories and create issues.
                </p>
            </div>
        <% } %>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-project-diagram fa-3x text-primary mb-3"></i>
                <h4 class="card-title">AI Clustering</h4>
                <p class="card-text">
                    Our AI analyzes your issues' content to find meaningful relationships and group them into logical clusters.
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-sitemap fa-3x text-success mb-3"></i>
                <h4 class="card-title">Epic Creation</h4>
                <p class="card-text">
                    Automatically generate epic issues to organize related issues, complete with descriptions and task lists.
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-network-wired fa-3x text-danger mb-3"></i>
                <h4 class="card-title">Relationship Visualization</h4>
                <p class="card-text">
                    Visualize the relationships between issues and epics with interactive graph visualization.
                </p>
            </div>
        </div>
    </div>
</div>

<% if (error) { %>
    <div class="row mt-4">
        <div class="col-md-8 offset-md-2">
            <div class="alert alert-danger">
                <strong>Error:</strong> <%= error %>
            </div>
        </div>
    </div>
<% } %> 